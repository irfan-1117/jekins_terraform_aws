pipeline {
    agent any

    environment {
        AWS_CRED = credentials('AWS_CRED')
        AWS_DEFAULT_REGION = ${AWS_DEFAULT_REGION}
        TF_STATE_BUCKET = ${TF_STATE_BUCKET}
        TF_STATE_KEY = ${TF_STATE_KEY}
    }

    tools {
        terraform 'terraform'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/irfan-1117/jekins_terraform_aws.git']]
                )
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    sh "terraform init -backend-config=\"bucket=${TF_STATE_BUCKET}\" -backend-config=\"key=${TF_STATE_KEY}\" -backend-config=\"region=${AWS_DEFAULT_REGION}\""
                }
            }
        }

        stage('Terraform Action') {
            environment {
                TF_ACTION = input(message: 'Enter Terraform action (e.g., plan, apply):', parameters: [string(defaultValue: 'plan', description: 'Terraform action', name: 'ACTION')])
            }
            steps {
                sh "terraform ${TF_ACTION} --auto-approve"
            }
        }
    }
}
